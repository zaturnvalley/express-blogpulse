<h1><%= post.title %> <small>by <%= post.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(post.createdAt).calendar() %></strong>
</p>

<p><%= post.content %></p>

<hr />

<form method="post" action="/posts/<%= post.id %>">
  <div class="form-group">
    <label for="name">Your name</label>
    <input type="text" id="name" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label for="comment">Comment on this post</label>
    <textarea rows="4" cols="50" id="content" name="content" class="form-control"></textarea>
  </div>
  <input type="submit" value="Submit Comment" class="btn btn-primary">
</form>

<% post.comments.forEach(function(comment){ %>
  <div class="row">
    <div class="col-sm-12">
      <h5 style="text-decoration:underline"><strong><%= comment.name %></strong></h5>
      <p style="color:grey"><%= comment.content %></p>
    </div>
  </div>
  <hr />
<% }); %>

<a href="/">&larr; Back Home</a>
